    }
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }
    input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }
    .results {
      margin-top: 30px;
      padding: 15px;
      border: 1px solid #ccc;
      background-color: #f9f9f9;
    }
    .positivo {
      color: green;
      font-weight: bold;
    }
    .moderado {
      color: orange;
      font-weight: bold;
    }
    .negativo {
      color: red;
      font-weight: bold;
    }
  </style>
